# Sample environment configuration for Docker Compose
# Copy this file to the repository root as `.env` before running docker compose.

# Postgres database
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=db
PGPORT=5432
PGDATABASE=picking

# Picking API
API_JWT_SECRET=changeme
API_JWT_EXP_HOURS=8
ABCXYZ_OUTPUT_DIR=/data/abcxyz
PRINTER_NAME=ZDesigner ZD888t

# Picking UI
# When serving through docker compose, leave PICKING_API_URL as http://picking-api:8000.
# The UI login page always authenticates against the UI service itself.
PICKING_API_URL=http://picking-api:8000
PICKING_API_TIMEOUT=10
# PICKING_UI_LOGIN_ENDPOINT=http://localhost:8000/auth/login

# n8n
GENERIC_TIMEZONE=America/Santiago
MPLBACKEND=Agg
PRINT_SERVICE_TOKEN=local-print-token

