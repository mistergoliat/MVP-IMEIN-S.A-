# Sample environment configuration for Docker Compose
# Copy this file to the repository root as `.env` before running docker compose.

# Postgres database
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=db
PGPORT=5432
PGDATABASE=picking
# The postgres image consumes POSTGRES_* variables; keep these in sync with the PG* values above.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=picking

# Picking API
API_JWT_SECRET=changeme
API_JWT_EXP_HOURS=8
ABCXYZ_OUTPUT_DIR=/data/abcxyz
PRINTER_NAME=ZDesigner ZD888t

# Picking UI
# When serving through docker compose, leave PICKING_API_URL as http://picking-api:8000.
# The UI login page always authenticates against the UI service itself.
PICKING_API_URL=http://picking-api:8000
PICKING_API_TIMEOUT=10
UI_COOKIE_SECURE=0
# PICKING_UI_LOGIN_ENDPOINT=http://localhost:8000/auth/login

# n8n
GENERIC_TIMEZONE=America/Santiago
MPLBACKEND=Agg
PRINT_SERVICE_TOKEN=local-print-token

# n8n security and access (single user)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=paula
N8N_BASIC_AUTH_PASSWORD=change-this-strong-password
N8N_USER_MANAGEMENT_DISABLED=true
N8N_ENCRYPTION_KEY=7f5f1a6a6f0a4a05b2b9c9d0c3e7f2a9f8b13d4c6e7a8b9c0d1e2f3a4b5c6d7e
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# n8n runtime recommendations
DB_SQLITE_POOL_SIZE=4
N8N_RUNNERS_ENABLED=true
N8N_GIT_NODE_DISABLE_BARE_REPOS=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# n8n URLs (edit with your public IP or domain if needed)
N8N_HOST=localhost54.94.18.141
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://54.94.18.141:5678
N8N_PUBLIC_URL=http://54.94.18.141:5678
N8N_WEBHOOK_URL=http://54.94.18.141:5678

